package local;

import org.jboss.cache.Fqn;
import org.jboss.cache.Cache;
eventclass Datarace{

	group localGroup{
		localhost
	}
	
	automaton dataraceDetector(){
 		start init: (consult -> middle)||(insert -> datarace);
 		middle: (consult -> middle)||(insert -> middle);
 		end datarace;
 	}
 	
	event consult(): call(* Cache.get(Fqn, Object)) && host(localGroup);
	
	event insert(): call(* Cache.put(Fqn, Object, Object)) && host(localGroup);
	
 	reaction before dataraceDetector.datarace{
		String msg = "DataRace detected!";
		System.out.println("----------------------------------------");
		System.out.println(msg);
		System.out.println("----------------------------------------");
	}
	
}